<?xml version="1.0" encoding="UTF-8"?>
<!--

	TinyQueries config file
	
	Fill in fields below and save this file as config.xml

-->
<config>

	<!--
	
		Database credentials
		
		REQUIRED FIELDS:
		name		- Name of your database
		user		- Database user
		password	- User's password
		
	-->
	<database
		host 		= "localhost"
		name		= ""
		user		= ""
		password	= ""
	/>

	<!--
		
		Compiler settings
		
		REQUIRED FIELDS:
		output		- Folder where the compiled SQL files should be put
		
		OPTIONAL:
		api_key 	- Your TinyQueries api key
		input		- Folder of your source files
		server		- The compiler server
		version		- Version of the compiler
		logfile		- Path to a logfile
		
	-->	
	<compiler
		api_key 	= ""
		input		= ""
		output		= ""
		server		= ""
		version 	= ""
		logfile		= ""
	/>
	
	<!--
	
		Post processor settings
		
		REQUIRED FIELDS:
		none
		
	-->
	<postprocessor
		nest_fields	= "true"
	/>

</config>